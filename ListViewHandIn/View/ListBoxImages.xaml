<UserControl x:Class="ListViewHandIn.View.ListBoxImages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListViewHandIn.View"
             mc:Ignorable="d" d:DesignWidth="350" Height="350">



    <Grid>
        <StackPanel>
            <ItemsControl ItemsSource="{Binding Path=FileList}" >
                <ListBox x:Name="ShowImage" Height="350" Width="350">
                    <DataTemplate >
                        <Image Source="{Binding FilePathImage}"></Image>
                    </DataTemplate>
                </ListBox>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>