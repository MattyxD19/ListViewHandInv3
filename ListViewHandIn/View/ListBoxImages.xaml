<UserControl x:Class="ListViewHandIn.View.ListBoxImages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListViewHandIn.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <StackPanel>
            <ListBox x:Name="ShowImages" Height="350" Width="350" HorizontalAlignment="Right" VerticalAlignment="Center">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding FileName}"></Image>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
